// SPDX-License-Identifier: MIT
pragma solidity ^0.8.30;

// --- OpenZeppelin 라이브러리 ---
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

// --- Chainlink 오라클 인터페이스 ---
import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";

/**
 * @title HbitVending
 * @author ZIN (HONEY BIT)
 * @notice $HBIT 토큰을 BNB 또는 USDT로 판매하는 '자판기' 컨트랙트입니다.
 * @dev "Pull" 모델을 사용하여 판매 대금은 컨트랙트에 보관되며, 소유자만 인출할 수 있습니다.
 */
contract HbitVending is Ownable, Pausable, ReentrancyGuard {
    
    // SafeERC20 라이브러리를 IERC20 인터페이스에 사용합니다.
    using SafeERC20 for IERC20;

    // --- 상태 변수 ---

    // 토큰
    IERC20 public immutable hbitToken;
    IERC20 public immutable usdtToken;

    // 가격 및 정밀도 (1 HBIT = 0.025 USD)
    uint256 public constant HBIT_PRICE_USD = 25_000_000; // 0.025 * 1e8
    uint256 public constant USD_PRECISION = 1e8;
    uint256 public constant HBIT_DECIMALS = 1e18;
    uint256 public constant USDT_DECIMALS_FACTOR = 1e10; // 1e18(USDT) / 1e8(USD)

    // 오라클 (Chainlink)
    AggregatorV3Interface public bnbUsdOracle;
    
    // 판매 한도
    uint256 public constant MIN_PURCHAS_USD = 25 * USD_PRECISION;  // 최소 $25
    uint256 public constant MAX_PURCHASE_USD = 200 * USD_PRECISION; // 최대 $200
    uint256 public constant TOTAL_SALE_CAP = 20_000_000 * HBIT_DECIMALS; // 총 2천만 HBIT
    uint256 public totalSold; // 현재까지 판매된 총량

    // 자금 수신 지갑 (인출용)
    address payable public beneficiaryWallet;

    // --- 이벤트 ---

    event TokensPurchased(address indexed buyer, uint256 usdValue, uint256 hbitAmount, bool paidWithBnb);
    event OraclesUpdated(address oracle);
    event BeneficiaryUpdated(address newBeneficiary);
    event BnbWithdrawn(address indexed to, uint256 amount);
    event UsdtWithdrawn(address indexed to, uint256 amount);

    // --- 생성자 (Constructor) ---
    constructor(
        address _usdtAddress,
        address _bnbUsdOracle,
        address _beneficiary
    ) Ownable(msg.sender) { // 배포자를 소유자로 설정
        
        // 0 주소 입력 방지
        require(_usdtAddress != address(0), "USDT address cannot be zero");
        require(_bnbUsdOracle != address(0), "Oracle address cannot be zero");
        require(_beneficiary != address(0), "Beneficiary address cannot be zero");

        // HBIT 토큰 주소 (하드코딩)
        hbitToken = IERC20(0xe30632bD8f92Dc18B844a56b7e3944aF0Fd277f2);
        
        // 생성자 인자 설정
        usdtToken = IERC20(_usdtAddress);
        bnbUsdOracle = AggregatorV3Interface(_bnbUsdOracle);
        beneficiaryWallet = payable(_beneficiary);
    }

    // --- 외부 구매 함수 ---

    /**
     * @notice BNB를 직접 입금받아 토큰을 판매합니다.
     */
    receive() external payable {
        buyWithBnb();
    }

    /**
     * @notice BNB를 지불하여 HBIT를 구매합니다.
     */
    function buyWithBnb() public payable whenNotPaused nonReentrant {
        uint256 bnbAmount = msg.value;
        require(bnbAmount > 0, "BNB amount must be positive");

        // 실시간 BNB 가치를 계산합니다.
        uint256 usdValue = getUsdValueFromBnb(bnbAmount);
        
        // 구매 로직을 처리합니다.
        _processPurchase(usdValue, msg.sender);

        // BNB는 컨트랙트에 자동 보관됩니다 (Pull 모델).
        emit TokensPurchased(msg.sender, usdValue, calculateHbitAmount(usdValue), true);
    }

    /**
     * @notice USDT를 지불하여 HBIT를 구매합니다.
     * @dev 호출 전에 사용자는 이 컨트랙트에 USDT를 'approve' 해야 합니다.
     * @param _usdtAmount 구매에 사용할 USDT 수량
     */
    function buyWithUsdt(uint256 _usdtAmount) public whenNotPaused nonReentrant {
        require(_usdtAmount > 0, "USDT amount must be positive");

        uint256 usdValue = getUsdValueFromUsdt(_usdtAmount);
        _processPurchase(usdValue, msg.sender);

        // USDT를 사용자로부터 컨트랙트로 전송받아 보관합니다 (Pull 모델).
        usdtToken.safeTransferFrom(msg.sender, address(this), _usdtAmount);

        emit TokensPurchased(msg.sender, usdValue, calculateHbitAmount(usdValue), false);
    }

    // --- 내부 핵심 로직 ---

    /**
     * @notice 모든 구매에 대한 공통 유효성 검사 및 토큰 전송을 처리합니다.
     */
    function _processPurchase(uint256 _usdValue, address _buyer) internal {
        // 1. 유효성 검사 (Checks)
        require(_usdValue >= MIN_PURCHAS_USD, "Min purchase USD not met");
        require(_usdValue <= MAX_PURCHASE_USD, "Max purchase USD exceeded");

        uint256 hbitToBuy = calculateHbitAmount(_usdValue);
        require(hbitToBuy > 0, "HBIT amount must be positive");

        uint256 newTotalSold = totalSold + hbitToBuy;
        require(newTotalSold <= TOTAL_SALE_CAP, "Total sale cap exceeded");

        // 컨트랙트가 판매할 HBIT 잔고를 보유하고 있는지 확인
        require(hbitToken.balanceOf(address(this)) >= hbitToBuy, "Not enough HBIT in contract");

        // 2. 상태 변경 (Effects)
        totalSold = newTotalSold;
        
        // 3. 토큰 전송 (Interactions)
        hbitToken.safeTransfer(_buyer, hbitToBuy);
    }

    // --- 가격 계산 함수 (읽기 전용) ---

    /**
     * @notice Chainlink 오라클에서 현재 BNB/USD 가격을 조회합니다.
     */
    function getBnbPrice() public view returns (uint256) {
        (, int256 price_int, , , ) = bnbUsdOracle.latestRoundData();
        require(price_int > 0, "Chainlink price invalid");
        return uint256(price_int); // 1e8 정밀도
    }

    /**
     * @notice BNB 수량을 USD 가치로 변환합니다.
     */
    function getUsdValueFromBnb(uint256 _bnbAmount) public view returns (uint256) {
        uint256 bnbPriceUsd = getBnbPrice(); 
        // (BNB 1e18 * Price 1e8) / 1e18 = USD 1e8
        return (_bnbAmount * bnbPriceUsd) / HBIT_DECIMALS;
    }

    /**
     * @notice USDT 수량을 USD 가치로 변환합니다. (1 USDT = 1 USD 가정)
     */
    function getUsdValueFromUsdt(uint256 _usdtAmount) public pure returns (uint256) {
        // (USDT 1e18 / 1e10) = USD 1e8
        return _usdtAmount / USDT_DECIMALS_FACTOR; 
    }

    /**
     * @notice USD 가치를 구매할 HBIT 수량으로 변환합니다.
     */
    function calculateHbitAmount(uint256 _usdValue) public pure returns (uint256) {
        // (USD 1e8 * 1e18) / Price 1e8 = HBIT 1e18
        return (_usdValue * HBIT_DECIMALS) / HBIT_PRICE_USD;
    }

    // --- 관리자 함수 (Owner Only) ---
    
    /**
     * @notice 오라클 주소를 변경합니다.
     */
    function setOracle(address _oracle) external onlyOwner {
        require(_oracle != address(0), "Invalid oracle");
        bnbUsdOracle = AggregatorV3Interface(_oracle);
        emit OraclesUpdated(_oracle);
    }
    
    /**
     * @notice 컨트랙트에 보관된 BNB 전액을 인출합니다.
     */
    function withdrawBnb() external onlyOwner nonReentrant {
        uint256 balance = address(this).balance;
        require(balance > 0, "No BNB to withdraw");

        (bool sent, ) = beneficiaryWallet.call{value: balance}("");
        require(sent, "BNB withdrawal failed");

        emit BnbWithdrawn(beneficiaryWallet, balance);
    }

    /**
     * @notice 컨트랙트에 보관된 USDT 전액을 인출합니다.
     */
    function withdrawUsdt() external onlyOwner nonReentrant {
        uint256 balance = usdtToken.balanceOf(address(this));
        require(balance > 0, "No USDT to withdraw");

        usdtToken.safeTransfer(beneficiaryWallet, balance);
        emit UsdtWithdrawn(beneficiaryWallet, balance);
    }

    /**
     * @notice 판매 기능을 일시 중지합니다.
     */
    function pauseSale() external onlyOwner { 
        _pause(); 
    }

    /**
     * @notice 판매 기능을 다시 시작합니다.
     */
    function unpauseSale() external onlyOwner { 
        _unpause(); 
    }

    /**
     * @notice 자금을 인출할 지갑 주소를 변경합니다.
     */
    function setBeneficiary(address _newBeneficiary) external onlyOwner {
        require(_newBeneficiary != address(0), "Invalid address");
        beneficiaryWallet = payable(_newBeneficiary);
        emit BeneficiaryUpdated(_newBeneficiary);
    }

    /**
     * @notice 판매되지 않고 컨트랙트에 남아있는 HBIT 토큰을 회수합니다.
     */
    function withdrawUnsoldHbit() external onlyOwner {
        hbitToken.safeTransfer(owner(), hbitToken.balanceOf(address(this)));
    }

    /**
     * @notice 실수로 컨트랙트에 전송된 다른 (HBIT, USDT가 아닌) 토큰을 회수합니다.
     */
    function rescueStuckTokens(address _tokenAddress) external onlyOwner {
        IERC20 token = IERC20(_tokenAddress);
        require(_tokenAddress != address(hbitToken) && _tokenAddress != address(usdtToken), "Cannot rescue sale tokens");
        token.safeTransfer(owner(), token.balanceOf(address(this)));
    }
}
